{
  "name": "npm-js",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/npm-js/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/npm-js",
        "main": "packages/npm-js/src/index.ts",
        "tsConfig": "packages/npm-js/tsconfig.lib.json",
        "assets": [
          "packages/npm-js/*.md",
          {
            "input": "./packages/npm-js/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/npm-js/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/npm-js",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/npm-js",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/npm-js/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}

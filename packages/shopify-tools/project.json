{
  "name": "shopify-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shopify-tools/src",
  "projectType": "library",
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm run graphql-codegen"
      }
    },
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "packages/shopify-tools/src/index.ts",
        "outputPath": "dist/packages/shopify-tools",
        "tsConfig": "packages/shopify-tools/tsconfig.lib.json",
        "compiler": "tsc",
        "project": "packages/shopify-tools/package.json",
        "format": ["esm", "cjs"],
        "external": "all",
        "rollupConfig": "packages/shopify-tools/rollup.config.cjs",
        "assets": [
          {
            "glob": "packages/shopify-tools/README.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs shopify-tools {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/shopify-tools"
      }
    }
  },
  "tags": []
}

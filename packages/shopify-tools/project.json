{
  "name": "shopify-tools",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shopify-tools/src",
  "projectType": "library",
  "targets": {
    "generate": {
      "executor": "nx:run-commands",
      "outputs": ["packages/shopify-tools/src/types/graphql.generated.ts"],
      "options": {
        "command": "npx graphql-codegen --config packages/shopify-tools/codegen.ts"
      }
    },

    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "main": "packages/shopify-tools/src/index.ts",
        "outputPath": "dist/packages/shopify-tools",
        "tsConfig": "packages/shopify-tools/tsconfig.lib.json",
        "compiler": "swc",
        "project": "packages/shopify-tools/package.json",
        "format": ["esm", "cjs"],
        "external": "all",
        "generateExportsField": true,
        "assets": [
          {
            "glob": "packages/shopify-tools/README.md",
            "input": ".",
            "output": "."
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs shopify-tools {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/shopify-tools/**/*.ts"]
      }
    }
  },
  "tags": []
}
